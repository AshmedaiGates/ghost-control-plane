[Unit]
Description=Ghost Android API + Mobile Dashboard
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment=GCP_ANDROID_PORT=8080
# Set token in ~/.config/ghost-control-plane/android-token and sourced below
EnvironmentFile=-%h/.config/ghost-control-plane/android.env
ExecStart=%h/.openclaw/workspace/ghost-control-plane/scripts/gcp_android_api.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
